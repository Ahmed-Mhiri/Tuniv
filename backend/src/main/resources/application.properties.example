# ===============================
# DATABASE CONFIGURATION
# ===============================
# Use the DB_URL environment variable in production, otherwise default to localhost for local dev
spring.datasource.url=${DB_URL:jdbc:postgresql://localhost:5432/tuniv_db}
spring.datasource.username=${DB_USERNAME:postgres}
spring.datasource.password=${DB_PASSWORD:your_local_password} 

# ===============================
# JPA / HIBERNATE CONFIGURATION
# ===============================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# ===============================
# SECURITY / JWT CONFIGURATION
# ===============================
# MUST be set as an environment variable in production
jwt.secret=${JWT_SECRET:bXlzdXBlcnNlY3JldGtleWZvcmF3ZXNvbWVhcHBsaWNhdGlvbjEyMzQ1Njc4OQ==}

# ===============================
# EMAIL (SMTP) CONFIGURATION
# ===============================
spring.mail.host=${MAIL_HOST:smtp.gmail.com}
spring.mail.port=${MAIL_PORT:587}
spring.mail.username=${MAIL_USERNAME:your-email@gmail.com}
spring.mail.password=${MAIL_PASSWORD:your-google-app-password}

spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
# ===============================
# CLOUD FILE STORAGE (S3)
# ===============================
# MUST be set as environment variables in production
aws.s3.bucket-name=${S3_BUCKET_NAME:your-bucket-name}
aws.s3.region=${S3_REGION:fra1} # e.g., fra1 for Frankfurt on DigitalOcean
aws.s3.endpoint=${S3_ENDPOINT:https://fra1.digitaloceanspaces.com}
aws.access.key=${S3_ACCESS_KEY:your-access-key}
aws.secret.key=${S3_SECRET_KEY:your-secret-key}